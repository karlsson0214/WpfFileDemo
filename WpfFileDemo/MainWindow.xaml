<Window x:Class="WpfFileDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFileDemo"
        mc:Ignorable="d"
        Title="WPF File Demo" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="File content" />
        <TextBlock Name="FileContent" />
        <TextBlock Text="Path to file" />
        <TextBox Name="FilePath" />
        <Button Name="NewEmpty" Content="New Empty File" Click="NewEmpty_Click"/>
        <Button Name="NewWithContent" Content="New File With Content" Click="NewWithContent_Click" />
        <TextBlock Text="Text to append" />
        <TextBox Name="TextToAppend" Text="Line with text to add" />
        <Button Name="AppendLine" Content="Append line" Click="AppendLine_Click" />
        
    </StackPanel>
</Window>
